{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "exclude": [
      "node_modules",
      "**/__tests__/**"
    ]
  }
}